<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="A front-end template that helps you build fast, modern mobile web apps.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>Administration</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.cyan-light_blue.min.css">
    <link href="{{ asset('/lib/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('/css/backend-style.css') }}" rel="stylesheet">
</head>
<body>
<div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
    <header class="demo-header mdl-layout__header mdl-color--grey-100 mdl-color-text--grey-600">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-target">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('home') }}">Alaska</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse-target">
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                            <li class="{% if adminMenu is defined %}active{% endif %}"><a href="{{ path('home') }}"><span class="glyphicon glyphicon-home"></span> Retour au site</a></li>
                        {% endif %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li class="{% if adminMenu is defined %}active{% endif %}"><a href="{{ path('logout') }}">Deconnexion</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div><!-- /.container -->
        </nav>
    </header>
    <div class="demo-drawer mdl-layout__drawer mdl-color--blue-grey-900 mdl-color-text--blue-grey-50">
        <nav class="demo-navigation mdl-navigation mdl-color--blue-grey-800">
            <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

            </div>
            <a class="mdl-navigation__link" href="{{ path('admin_articles') }}">Articles</a>
            <a class="mdl-navigation__link" href="{{ path('admin_comments') }}">Commentaires</a>
            <a class="mdl-navigation__link" href="{{ path('admin_flagged') }}">Moderation</a>
            <a class="mdl-navigation__link" href="{{ path('admin_users') }}">Membres</a>
        </nav>
    </div>
    <div class="container">
        {% block title %}
        {% endblock %}
        {% block content %}
        {% endblock %}
    </div>
</div>

{% block javascript %}
    <script src="{{ asset('/lib/jquery/jquery.min.js') }}"></script>
    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <script src='//cloud.tinymce.com/stable/tinymce.min.js'></script>
    <script src="{{ asset('/lib/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('/lib/jquery/reply.js') }}"></script>
    <script src="{{ asset('/lib/jquery/tinymce.js') }}"></script>
{% endblock %}
</body>
</html>
